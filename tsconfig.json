{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "./lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "declaration": true,
  "include": ["stories"],
  "exclude": ["src/**/*.stories.@(mdx,tsx)"]
}
